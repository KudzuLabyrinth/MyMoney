<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_category"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginBottom="35dp"
        android:text="@string/select_category"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_small_category"
        app:layout_constraintEnd_toEndOf="@+id/txt_small_category"
        />

    <Spinner
        android:id="@+id/spn_category"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_category"
        app:layout_constraintEnd_toEndOf="@+id/spn_small_category"
        app:layout_constraintStart_toStartOf="@+id/spn_small_category"
        app:layout_constraintTop_toTopOf="@+id/txt_category"
        />


    <TextView
        android:id="@+id/txt_small_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="144dp"
        android:text="@string/select_small_category"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Spinner
        android:id="@+id/spn_small_category"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_small_category"
        app:layout_constraintEnd_toEndOf="@+id/edt_date"
        app:layout_constraintStart_toStartOf="@+id/edt_date"
        app:layout_constraintTop_toTopOf="@+id/txt_small_category"
        />

    <TextView
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cost"
        android:textSize="25sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/edt_cost"
        app:layout_constraintStart_toStartOf="@+id/date"
        />

    <EditText
        android:id="@+id/edt_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="211dp"
        android:ems="5"

        android:hint="@string/init_count"
        android:inputType="number"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edt_date"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:textSize="25sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/edt_date"
        app:layout_constraintEnd_toEndOf="@+id/txt_small_category"
        app:layout_constraintStart_toStartOf="@+id/txt_category"
        />

    <EditText
        android:id="@+id/edt_date"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginBottom="74dp"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="74dp"
        android:ems="5"
        android:hint="@string/init_count"
        android:inputType="date"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/edt_cost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spn_small_category"
        />

    <TextView
        android:id="@+id/remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remark"
        android:textSize="25sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/edt_remark"
        app:layout_constraintStart_toStartOf="@+id/cost"
        />

    <EditText
        android:id="@+id/edt_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:ems="5"
        android:hint="@string/add_remark"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/edt_cost"
        app:layout_constraintTop_toBottomOf="@+id/edt_cost"
        />


</android.support.constraint.ConstraintLayout>